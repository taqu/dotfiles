scriptencoding utf-8
set encoding=utf-8

" save
set fileencoding=utf-8
" load
set fileencodings=utf-8,ucs-boms,euc-jp,cp932
" linefeed
set fileformats=unix,dos,mac

" edit
"----------------------------------------------
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set smartindent
set backspace=indent,eol,start
set showmatch
set wildmenu
set formatoptions+=mM

" display
"----------------------------------------------
set nonumber
set ruler
set nolist
set nowrap
set laststatus=2
set cmdheight=2
set showcmd
set title
set ambiwidth=double
syntax enable

" backup
"----------------------------------------------
set nobackup
set noundofile
set noswapfile

" search
"----------------------------------------------
set incsearch
set ignorecase
set smartcase
set wrapscan
set hlsearch

